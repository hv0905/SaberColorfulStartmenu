                    xmlns:local="clr-namespace:SaberColorfulStartmenu"
                    xmlns:windowsShell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework">

    <Style x:Key="BorderlessWindowStyle" TargetType="Window">
        <Setter Property="windowsShell:WindowChrome.WindowChrome">
            <Setter.Value>
                <windowsShell:WindowChrome ResizeBorderThickness="5" CaptionHeight="0" CornerRadius="0"
                                           GlassFrameThickness="0,0,1,1" />
            </Setter.Value>
        </Setter>
